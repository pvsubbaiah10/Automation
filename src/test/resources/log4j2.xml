<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <!-- Get date and month -->
        <Property name="logDir">logs/${date:YY-MM-dd}</Property>
        <!-- log file name will be set from code -->
        <Property name="logFileName">default</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%p] %m%n"/>
        </Console>

        <File name="FileLogger" fileName="${logDir}/${logFileName}.log">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>
</Configuration>
